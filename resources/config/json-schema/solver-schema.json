{
    "$schema": "http://json-schema.org/draft-06/schema#",
    // TODO need to choose the proper id
    "$id": "http://localhost:8080/resources/config/json-schema/solver-schema.json",
    "type": "object",
    "properties": {
        "solver": {
            "title": "Solver's name.",
            "description": "Missing.",
            "type": "string"
        },
        "options": {
            "title": "Solver's option",
            "description": "Missing.",
            "type": "array",
            "minItems": 1,
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "title": "Option's name.",
                        "description": "Missing.",
                        "type": "string"
                    },
                    "sign": {
                        "title": "Option's sign.",
                        "description": "Missing.",
                        "type": "string"            
                    },
                    "argument": {
                        "title": "Argument's presence.",
                        "description": "Missing.",
                        "type": "boolean"            
                    },
                    "description": {
                        "title": "Options description.",
                        "description": "Missing.",
                        "type": "string"            
                    }
                },
                "required": [
                    "name",
                    "sign",
                    "argument",
                    "description"
                ]
            }
        }
    },
    "required": [
        "solver"
    ],
    "additionalProperties": false
}